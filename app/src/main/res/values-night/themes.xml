<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_shade_1</item>
        <item name="colorPrimaryVariant">@color/black_shade_1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize30Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>
    
    <style name="Theme.MusicPlayer.hideAction">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryVariant">@color/black_shade_2</item>
        <item name="windowNoTitle">true</item>
        <item name="title">Playlist Songs</item>
    </style>

</resources>